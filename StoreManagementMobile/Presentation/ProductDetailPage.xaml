<Page
    x:Class="StoreManagementMobile.Presentation.ProductDetailPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="using:StoreManagementMobile.Presentation"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    d:DataContext="{d:DesignInstance Type=local:ProductDetailViewModel}">

    <Grid RowDefinitions="Auto, *">
       <RelativePanel Grid.Row="0" Margin="10, 10, 10, 10" Height="50">

            <!-- Nút back phía trái - Lớn hơn -->
            <Button x:Name="BackButton"
                    Content="&#xE72B;"
                    FontFamily="Segoe MDL2 Assets"
                    Click="BackButton_Click"
                    Width="50" Height="50"
                    Background="#FF4444"
                    Foreground="White"
                    BorderThickness="2"
                    BorderBrush="#CC0000"
                    CornerRadius="25"
                    Padding="0"
                    FontSize="20"/>

            <!-- Text căn giữa -->
            <TextBlock Text="Chi tiết Sản phẩm"
                       FontSize="20"
                       FontWeight="Bold"
                       VerticalAlignment="Center"
                       RelativePanel.AlignHorizontalCenterWithPanel="True"/>

        </RelativePanel>


        <ScrollViewer Grid.Row="1" Padding="20">
            <StackPanel Spacing="24">

                <Border CornerRadius="12" Background="#F0F0F0" Height="300" HorizontalAlignment="Stretch">
                    <Image Source="{x:Bind ViewModel.ProductImageUrl, Mode=OneWay}" 
                        Stretch="UniformToFill"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"/>
                </Border>

                <TextBlock x:Name="ProductNameControl"
                        Text="{x:Bind ViewModel.ProductName, Mode=OneWay}"
                        FontSize="28"
                        FontWeight="Bold"
                        TextWrapping="Wrap"
                        Margin="0, 8, 0, 0"/>

                <TextBlock x:Name="ProductPriceControl"
                        Text="{x:Bind ViewModel.ProductPriceFormatted, Mode=OneWay}"
                        Foreground="#0078D7" 
                        FontSize="24"
                        FontWeight="ExtraBold"/>

                <StackPanel Spacing="16">
                    <StackPanel Orientation="Horizontal" Spacing="12">
                        <TextBlock Text="Mã vạch:" FontWeight="SemiBold" Width="80"/>
                        <TextBlock Text="{x:Bind ViewModel.ProductBarcode, Mode=OneWay}" TextWrapping="Wrap"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Spacing="12">
                        <TextBlock Text="Đơn vị:" FontWeight="SemiBold" Width="80"/>
                        <TextBlock Text="{x:Bind ViewModel.ProductUnit, Mode=OneWay}"/>
                    </StackPanel>
                    
                    <StackPanel Orientation="Horizontal" Spacing="12">
                        <TextBlock Text="Loại SP:" FontWeight="SemiBold" Width="80"/>
                        <TextBlock Text="{x:Bind ViewModel.ProductCategoryName, Mode=OneWay}"/>
                    </StackPanel>
                </StackPanel>

                <Rectangle Fill="#CCCCCC" Height="1" Margin="0, 10, 0, 10"/>

                <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Spacing="20">
                    <Button x:Name="DecreaseBtn"
                            Command="{x:Bind ViewModel.DecreaseCommand}"
                            Content="−"
                            Width="56" Height="56"
                            FontSize="24"
                            CornerRadius="28"/>

                    <TextBlock Text="{x:Bind ViewModel.Quantity, Mode=OneWay}"
                            VerticalAlignment="Center"
                            FontSize="28"
                            FontWeight="Bold"
                            Width="50"
                            TextAlignment="Center"/>

                    <Button x:Name="IncreaseBtn"
                            Command="{x:Bind ViewModel.IncreaseCommand}"
                            Content="+"
                            Width="56" Height="56"
                            FontSize="24"
                            CornerRadius="28"/>
                </StackPanel>

                <Rectangle Fill="#CCCCCC" Height="1" Margin="0, 10, 0, 10"/>

                <!-- 2 nút: Thêm vào giỏ và Mua ngay -->
                <Grid ColumnDefinitions="*, *" ColumnSpacing="12">
                    <Button x:Name="AddToCartBtn"
                            Grid.Column="0"
                            Content="Thêm vào giỏ"
                            Command="{x:Bind ViewModel.AddToCartCommand}"
                            Background="#0078D7"
                            Foreground="White"
                            CornerRadius="8"
                            Height="56"
                            FontSize="16"
                            HorizontalAlignment="Stretch"/>
                    
                    <Button x:Name="BuyNowBtn"
                            Grid.Column="1"
                            Content="Mua ngay"
                            Click="BuyNowButton_Click"
                            Background="#FF4444"
                            Foreground="White"
                            CornerRadius="8"
                            Height="56"
                            FontSize="16"
                            FontWeight="Bold"
                            HorizontalAlignment="Stretch"/>
                </Grid>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>