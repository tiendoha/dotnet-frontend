    <Page
        x:Class="StoreManagementMobile.Presentation.ProductDetailPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

        <Grid RowDefinitions="Auto, *">
            <RelativePanel Grid.Row="0" Margin="10, 10, 10, 0">
                <Button x:Name="BackButton"
                        Content="&#xE72B;" 
                        FontFamily="Segoe MDL2 Assets"
                        Command="{Binding NavigateBackCommand}" 
                        Background="Transparent"
                        BorderThickness="0"
                        VerticalAlignment="Center"
                       />

                <TextBlock Text="Chi tiết Sản phẩm"
                        RelativePanel.AlignHorizontalCenterWithPanel="True"
                        RelativePanel.RightOf="BackButton"
                        FontSize="18"
                        FontWeight="SemiBold"
                        VerticalAlignment="Center"
                        Margin="10,0,0,0"/>
            </RelativePanel>

            <ScrollViewer Grid.Row="1" Padding="20">
                <StackPanel Spacing="24">

                    <Border CornerRadius="12" Background="#F0F0F0" Height="250" HorizontalAlignment="Stretch">
                        <Image Source="{Binding ProductImageUrl}" 
                            Stretch="UniformToFill"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center"/>
                    </Border>

                    <TextBlock x:Name="ProductNameControl"
                            Text="{Binding ProductName}"
                            FontSize="28"
                            FontWeight="Bold"
                            TextWrapping="Wrap"
                            Margin="0, 8, 0, 0"/>

                    <TextBlock x:Name="ProductPriceControl"
                            Text="{Binding ProductPrice}"
                            Foreground="#0078D7" 
                            FontSize="24"
                            FontWeight="ExtraBold"/>

                    <StackPanel Spacing="16">
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <TextBlock Text="Mã vạch:" FontWeight="SemiBold" Width="80"/>
                            <TextBlock Text="{Binding ProductBarcode}" TextWrapping="Wrap"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <TextBlock Text="Đơn vị:" FontWeight="SemiBold" Width="80"/>
                            <TextBlock Text="{Binding ProductUnit}"/>
                        </StackPanel>
                    </StackPanel>

                    <Rectangle Fill="#CCCCCC" Height="1" Margin="0, 10, 0, 10"/>

                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Center"
                                Spacing="20">
                        <Button x:Name="DecreaseBtn"
                                Command="{Binding DecreaseCommand}"
                                Content="−"
                                Width="56" Height="56"
                                FontSize="24"
                                CornerRadius="28"/>

                        <TextBlock Text="{Binding Quantity}"
                                VerticalAlignment="Center"
                                FontSize="28"
                                FontWeight="Bold"
                                Width="50"
                                TextAlignment="Center"/>

                        <Button x:Name="IncreaseBtn"
                                Command="{Binding IncreaseCommand}"
                                Content="+"
                                Width="56" Height="56"
                                FontSize="24"
                                CornerRadius="28"/>
                    </StackPanel>

                    <Rectangle Fill="#CCCCCC" Height="1" Margin="0, 10, 0, 10"/>

                    <Button x:Name="AddToCartBtn"
                            Content="Thêm vào giỏ hàng"
                            Command="{Binding AddToCartCommand}"
                            Background="#0078D7"
                            Foreground="White"
                            CornerRadius="8"
                            Height="56"
                            FontSize="18"
                            HorizontalAlignment="Stretch"/>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Page>