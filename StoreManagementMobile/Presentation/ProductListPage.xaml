<Page
    x:Class="StoreManagementMobile.Presentation.ProductListPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:StoreManagementMobile.Models"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    mc:Ignorable="d"
    Background="#F9F9F9">

    <Page.Resources>
        <Style TargetType="TextBlock" x:Key="ProductNameTextStyle">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="MaxLines" Value="2"/>
            <Setter Property="Margin" Value="0,8,0,4"/>
        </Style>

        <Style TargetType="TextBlock" x:Key="PriceTextStyle">
            <Setter Property="Foreground" Value="#F22613"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>
    </Page.Resources>

    <Grid Padding="16,16,16,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- SEARCH + FILTER + HISTORY + CART -->
        <Grid Grid.Row="0" ColumnSpacing="12" Margin="0,0,0,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBox x:Name="SearchBox"
                     Grid.Column="0"
                     PlaceholderText="Tìm kiếm ..."
                     CornerRadius="8"
                     Height="40"
                     KeyDown="SearchBox_KeyDown"
                     KeyUp="SearchBox_KeyUp"
                     VerticalAlignment="Center"
                      Text="{x:Bind ViewModel.SearchQuery, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                     Background="#FFFFFF"/>

            <Button x:Name="btnFilter"
                    Grid.Column="1"
                    Height="40"
                    Width="40"
                    CornerRadius="8"
                    Padding="0"
                    Background="#8BC34A">
                <Image Source="ms-appx:///Assets/Icons/filter.png"
                       Width="22" Height="22"/>
                <Button.Flyout>
                    <Flyout x:Name="FilterSortFlyout" Placement="Bottom">
                        <StackPanel Width="250" Background="#F0F0F0" CornerRadius="8" Padding="16" Spacing="12">
                            <TextBlock Text="Sắp xếp theo:" FontWeight="Bold"/>
                            <RadioButtons x:Name="SortOptions">
                                <RadioButton Content="Tên (A -> Z)" Tag="name|false"/>
                                <RadioButton Content="Giá (Thấp -> Cao)" Tag="price|false"/>
                                <RadioButton Content="Giá (Cao -> Thấp)" Tag="price|true"/>
                                <RadioButton Content="Ngày tạo (Mới -> Cũ)" Tag="createdat|true"/>
                            </RadioButtons>
                            <TextBlock Text="Lọc theo loại:" FontWeight="Bold" Margin="0,16,0,0"/>
                    <ComboBox ItemsSource="{x:Bind ViewModel.Categories}"
                            SelectedValuePath="CategoryId"
                            DisplayMemberPath="CategoryName"
                            SelectedValue="{x:Bind ViewModel.SelectedCategoryId, Mode=TwoWay}"
                            CornerRadius="6"
                            />

                            <Button Content="Áp dụng"
                                    Click="ApplySort_Click"
                                    Background="#8BC34A"
                                    Foreground="White"
                                    CornerRadius="6"/>
                        </StackPanel>
                    </Flyout>
                </Button.Flyout>
            </Button>

            <!-- HISTORY BUTTON -->
            <Button x:Name="btnHistory"
                    Grid.Column="2"
                    Height="40"
                    Width="50"
                    CornerRadius="8"
                    Padding="0"
                    Background="#FF9800"
                    BorderBrush="#F57C00"
                    BorderThickness="2"
                    Click="HistoryButton_Click"
                    ToolTipService.ToolTip="Lịch sử đơn hàng">
                <FontIcon Glyph="&#xE81C;" FontSize="22" Foreground="White"/>
            </Button>

            <!-- CART BUTTON -->
            <Button x:Name="btnCart"
                    Grid.Column="3"
                    Height="40"
                    Width="50"
                    CornerRadius="8"
                    Padding="0"
                    Background="#FF4444"
                    BorderBrush="#CC0000"
                    BorderThickness="2"
                    Click="CartButton_Click">
                <FontIcon Glyph="&#xE7BF;"
                         FontSize="22"
                         Foreground="White"/>
            </Button>
        </Grid>

        <!-- SCROLL CONTENT -->
    <ScrollViewer Grid.Row="1"
              VerticalScrollBarVisibility="Auto"
              Padding="0,8,0,16"
             ViewChanged="ScrollViewer_ViewChanged">
    <StackPanel Spacing="16">

        <!-- ITEMS -->
        <ItemsRepeater x:Name="ProductsRepeater"
                       ItemsSource="{x:Bind ViewModel.Items, Mode=OneWay}">
            <ItemsRepeater.Layout>
                <muxc:UniformGridLayout
                    Orientation="Horizontal"
                    MaximumRowsOrColumns="2"
                    MinItemWidth="160"
                    MinColumnSpacing="10"
                    MinRowSpacing="10"
                    ItemsJustification="Center"/>
            </ItemsRepeater.Layout>

            <ItemsRepeater.ItemTemplate>
                <DataTemplate x:DataType="models:ProductResponse">
                    <Border Background="#FFFFFF"
                            CornerRadius="10"
                            Padding="8"
                            BorderBrush="#EEE"
                            BorderThickness="1">
                        <StackPanel HorizontalAlignment="Center">
                            <!-- IMAGE -->
                            <Border Width="120" Height="120"
                                    CornerRadius="6"
                                    Background="#F5F5F5"
                                    Margin="0,0,0,8">
                                <Image Source="{x:Bind ImageUrl}" Stretch="Uniform"/>
                            </Border>

                            <!-- NAME -->
                            <TextBlock Text="{x:Bind ProductName}"
                                       Style="{StaticResource ProductNameTextStyle}"
                                       HorizontalAlignment="Center"/>

                            <!-- PRICE -->
                            <TextBlock Text="{x:Bind PriceText}"
                                       Style="{StaticResource PriceTextStyle}"
                                       HorizontalAlignment="Center"/>

                            <!-- BUTTONS -->
                            <StackPanel Orientation="Horizontal"
                                        Spacing="8"
                                        HorizontalAlignment="Center">
                                <Button Content="Thêm vào giỏ"
                                        Background="#F4A79F"
                                        Foreground="White"
                                        CornerRadius="4"
                                        FontSize="12"
                                        Padding="6,4"
                                        Click="AddToCart_Click"/>
                                <Button Content="Xem chi tiết"
                                        Background="#8BC34A"
                                        Foreground="White"
                                        CornerRadius="4"
                                        FontSize="12"
                                        Padding="6,4"
                                        Click="ViewDetails_Click"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ItemsRepeater.ItemTemplate>
        </ItemsRepeater>

        <!-- LOADING INDICATOR -->
        <ProgressRing x:Name="LoadingIndicator"
                      IsActive="{x:Bind ViewModel.IsLoading, Mode=OneWay}"
                      Width="48" Height="48"
                      HorizontalAlignment="Center"
                      Margin="0,20,0,0"/>
    </StackPanel>
</ScrollViewer>


    </Grid>
</Page>
