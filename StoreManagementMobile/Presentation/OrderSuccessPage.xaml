<Page
    x:Class="StoreManagementMobile.Presentation.OrderSuccessPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Background="#F5F5F5">

    <Grid>
        <StackPanel 
            HorizontalAlignment="Center" 
            VerticalAlignment="Center" 
            MaxWidth="400"
            Spacing="24"
            Padding="30">
            
            <!-- Icon dấu tích xanh -->
            <Border 
                Width="120" 
                Height="120" 
                Background="#4CAF50"
                CornerRadius="60">
                <FontIcon 
                    Glyph="&#xE73E;" 
                    FontSize="60" 
                    Foreground="White"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"/>
            </Border>
            
            <!-- Title -->
            <TextBlock 
                Text="Đặt hàng thành công!"
                FontSize="28"
                FontWeight="Bold"
                HorizontalAlignment="Center"
                Foreground="#4CAF50"
                Margin="0,20,0,0"/>
            
            <!-- Message -->
            <TextBlock 
                Text="Cảm ơn bạn đã mua hàng!"
                FontSize="16"
                HorizontalAlignment="Center"
                Foreground="#666"
                TextWrapping="Wrap"/>
            
            <!-- Thông tin đơn hàng -->
            <Border 
                Background="White" 
                CornerRadius="12" 
                Padding="20"
                BorderBrush="#E0E0E0"
                BorderThickness="1"
                Margin="0,10,0,0">
                <StackPanel Spacing="12">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <FontIcon Grid.Column="0" Glyph="&#xE8EC;" FontSize="16" Foreground="#4CAF50" Margin="0,0,8,0" VerticalAlignment="Center"/>
                        <TextBlock Grid.Column="1" VerticalAlignment="Center">
                            <Run Text="Tổng tiền: " FontWeight="SemiBold"/>
                            <Run x:Name="TotalText" FontWeight="Bold" FontSize="18" Foreground="#4CAF50"/>
                        </TextBlock>
                    </Grid>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <FontIcon Grid.Column="0" Glyph="&#xE7C3;" FontSize="16" Foreground="#666" Margin="0,0,8,0" VerticalAlignment="Center"/>
                        <TextBlock Grid.Column="1" VerticalAlignment="Center">
                            <Run Text="Giao tới: " FontWeight="SemiBold"/>
                            <Run x:Name="CustomerNameText"/>
                        </TextBlock>
                    </Grid>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <FontIcon Grid.Column="0" Glyph="&#xE717;" FontSize="16" Foreground="#666" Margin="0,0,8,0" VerticalAlignment="Center"/>
                        <TextBlock Grid.Column="1" VerticalAlignment="Center">
                            <Run Text="Liên hệ: " FontWeight="SemiBold"/>
                            <Run x:Name="CustomerPhoneText"/>
                        </TextBlock>
                    </Grid>
                </StackPanel>
            </Border>
            
            <!-- Nút quay về trang chủ -->
            <Button 
                HorizontalAlignment="Stretch"
                Height="50"
                CornerRadius="8"
                Background="#4CAF50"
                Foreground="White"
                FontSize="16"
                FontWeight="SemiBold"
                BorderThickness="0"
                Margin="0,10,0,0"
                Click="BackToHome_Click">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <FontIcon Glyph="&#xE80F;" FontSize="20"/>
                    <TextBlock Text="Quay về trang chủ" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
            
        </StackPanel>
    </Grid>
</Page>
